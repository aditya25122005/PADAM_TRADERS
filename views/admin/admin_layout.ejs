<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title><%= pageTitle || 'Admin' %> - PADAM</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- FontAwesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --gold: #FFC72C;
      --dark: #222;
      --muted: #f7f7f7;
    }
    body { background: var(--muted); }
    .admin-sidebar {
      min-height: 100vh;
      background: #fff;
      border-right: 1px solid #eee;
    }
    .admin-sidebar .nav-link {
      color: #333;
      font-weight: 600;
    }
    .admin-sidebar .nav-link.active {
      background: linear-gradient(90deg, #fff7e6, #fff3d6);
      color: #000;
      border-left: 4px solid var(--gold);
    }
    .topbar {
      background: #fff;
      border-bottom: 1px solid #eee;
      padding: 0.75rem 1rem;
    }
    .card-gold {
      border: 1px solid rgba(255,199,44,0.45);
      background: #fff;
      box-shadow: 0 6px 18px rgba(0,0,0,0.04);
    }
  </style>
  <% if (typeof extraHead !== 'undefined') { %>
    <%= extraHead %>
  <% } %>
</head>
<body>
  <div class="d-flex">
    <!-- SIDEBAR -->
    <aside class="admin-sidebar p-3" style="width: 260px;">
      <div class="mb-4 text-center">
        <a href="/admin/dashboard" class="text-decoration-none">
          <h4 style="color: var(--dark); font-weight:800; letter-spacing:1px;">PADAM <span style="color:var(--gold)">TRADERS</span></h4>
        </a>
      </div>
      <nav class="nav flex-column gap-1">
        <a class="nav-link <%= (typeof active === 'string' && active==='dashboard') ? 'active' : '' %>" href="/admin/dashboard"><i class="fa-solid fa-chart-line me-2"></i> Dashboard</a>
        <a class="nav-link <%= (active==='users') ? 'active' : '' %>" href="/admin/users"><i class="fa-solid fa-users me-2"></i> Users</a>
        <a class="nav-link <%= (active==='sellers') ? 'active' : '' %>" href="/admin/sellers"><i class="fa-solid fa-store me-2"></i> Sellers</a>
        <a class="nav-link <%= (active==='messages') ? 'active' : '' %>" href="/admin/messages"><i class="fa-solid fa-envelope me-2"></i> Messages</a>
        <a class="nav-link <%= (active==='pending') ? 'active' : '' %>" href="/admin/pending-sellers"><i class="fa-solid fa-user-clock me-2"></i> Pending Sellers</a>
        <div class="mt-3"></div>
        <a class="nav-link text-danger" href="/logout"><i class="fa-solid fa-right-from-bracket me-2"></i> Logout</a>
      </nav>
    </aside>

    <!-- MAIN -->
    <div class="flex-fill">
      <div class="topbar d-flex justify-content-between align-items-center">
        <div>
          <h5 class="mb-0"><%= pageTitle || 'Admin' %></h5>
        </div>
        <div>
          <span class="badge rounded-pill" style="background:var(--gold); color:#111; font-weight:700; padding:0.6rem 0.9rem;">
            Admin
          </span>
        </div>
      </div>

      <main class="p-4">
        <div class="container-fluid">
          <!-- page content injected here -->
          <%- body %>
        </div>
      </main>
    </div>
  </div>

  <!-- scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <% if (typeof extraScripts !== 'undefined') { %>
    <%= extraScripts %>
  <% } %>
</body>
</html>
