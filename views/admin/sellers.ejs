      <thead><tr><th>Seller</th><th>Email</th><th>Status</th><th>Products</th></tr></thead>
      <tbody>
        <% sellers.forEach(s => { %>
          <tr>
            <td><%= s.username || 'â€”' %></td>
            <td><%= s.email %></td>
