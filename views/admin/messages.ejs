<% layout('admin/admin_layout', { pageTitle: pageTitle, active:'messages' }) %>

<div class="card card-gold p-3">
  <h5>Contact Messages</h5>
  <div class="table-responsive mt-3">
    <table class="table">
      <thead>
        <tr>
          <th>From</th><th>Email</th><th>Contact No</th><th>Message</th><th>At</th><th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% messages.forEach(m => { %>
          <tr>
            <td><%= m.userId ? m.userId.username : (m.name || 'Guest') %></td>
            <td><%= m.email %></td>
            <td><%= m.contactNo || '-' %></td>
            <td style="max-width:320px;"><%= m.message.length>200 ? m.message.substring(0,200)+'...' : m.message %></td>
            <td><%= new Date(m.createdAt).toLocaleString('en-IN') %></td>
            <td>
              <form action="/admin/messages/<%= m._id %>/delete" method="post" style="display:inline;">
                <button class="btn btn-sm btn-danger">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>
