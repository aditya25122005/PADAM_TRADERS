<style>
    /* =========== MODERN NAVBAR =========== */
    .modern-navbar {
        position: sticky;
        top: 0;
        width: 100%;
        z-index: 50;
        backdrop-filter: blur(12px);
        background: rgba(40, 25, 20, 0.85);  /* warm tone */
        border-bottom: 1px solid rgba(255, 225, 150, 0.25);
        box-shadow: 0 4px 18px rgba(0,0,0,0.25);
        font-family: 'Poppins', sans-serif;
    }

    .nav-container {
        max-width: 1250px;
        margin: auto;
        padding: 12px 25px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .nav-brand {
        font-size: 2rem;
        font-weight: 800;
        letter-spacing: 2px;
        color: #ffd54f;
        text-decoration: none;
        transition: 0.3s ease;
        text-transform: uppercase;
    }

    .nav-brand:hover {
        color: #fff3cd;
        text-shadow: 0 0 15px rgba(255, 210, 100, 0.55);
        transform: scale(1.05);
    }

    /* NAV LINKS */
    .nav-links {
        list-style: none;
        display: flex;
        gap: 28px;
    }

    .nav-link {
        color: #ffe082;
        text-decoration: none;
        font-size: 1.15rem;
        font-weight: 600;
        position: relative;
        transition: 0.3s ease;
    }

    .nav-link:hover {
        color: #ffffff;
    }

    /* underline animation */
    .nav-link::after {
        content: "";
        position: absolute;
        bottom: -6px;
        left: 50%;
        width: 0%;
        height: 2.5px;
        background: #ffd54f;
        transform: translateX(-50%);
        transition: width 0.3s ease;
    }

    .nav-link:hover::after {
        width: 80%;
    }

    /* ACTIVE LINK */
    .nav-link.active {
        color: #ffffff;
        font-weight: 700;
    }

    .nav-link.active::after {
        width: 80%;
    }

    /* =========== MOBILE NAV =========== */
    .nav-toggle {
        display: none;
        flex-direction: column;
        gap: 6px;
        cursor: pointer;
    }

    .nav-toggle span {
        width: 28px;
        height: 3px;
        background: #ffd54f;
        border-radius: 3px;
        transition: 0.3s ease;
    }

    @media(max-width: 850px) {
        .nav-links {
            position: absolute;
            top: 75px;
            left: 0;
            width: 100%;
            background: rgba(40,25,20,0.95);
            flex-direction: column;
            padding: 20px 0;
            text-align: center;
            gap: 18px;
            border-bottom: 1px solid rgba(255,255,255,0.15);
            display: none;
        }

        .nav-links.show {
            display: block;
            animation: fadeDown 0.4s ease;
        }

        @keyframes fadeDown {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .nav-toggle {
            display: flex;
        }
    }
</style>

<nav class="modern-navbar">
    <div class="nav-container">
        <a class="nav-brand" href="/">PADAM TRADERS</a>

        <div class="nav-toggle" id="navToggle">
            <span></span><span></span><span></span>
        </div>

        <ul class="nav-links" id="navLinks">
            <li><a href="/" class="nav-link">Home</a></li>
            <li><a href="/#products" class="nav-link">View Products</a></li>
            <li><a href="/about" class="nav-link">About</a></li>
            <li><a href="/login" class="nav-link">Login</a></li>
            <li><a href="/register" class="nav-link">Sign Up</a></li>
        </ul>
    </div>
</nav>

<script>
    // Mobile menu toggle
    document.getElementById("navToggle").addEventListener("click", () => {
        document.getElementById("navLinks").classList.toggle("show");
    });

    // Smooth scroll to #products on same page
    document.querySelectorAll('a[href="#products"], a[href="/#products"]').forEach(link => {
        link.addEventListener("click", function(e) {
            if (window.location.pathname === "/") {
                e.preventDefault();
                document.querySelector("#products").scrollIntoView({ behavior: "smooth" });
            }
        });
    });

    // Highlight active link
    const currentPath = window.location.pathname;
    document.querySelectorAll(".nav-link").forEach(link => {
        if (link.getAttribute("href") === currentPath)
            link.classList.add("active");
    });
</script>
