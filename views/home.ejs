<% layout('layouts/boilerplate') %>
<%- include('partials/homenav') %>

<link rel="stylesheet" href="/css/home_modern.css">

<!-- HERO BANNER -->
<section class="hero-banner">
  <div class="hero-overlay"></div>
  <img src="/images/slide3.jpg" class="hero-image" alt="Mustard oil banner">

  <div class="hero-content">
    <h1>Pure. Fresh. Authentic Mustard Oil.</h1>
    <p>From farm to kitchen — the quality you can trust.</p>
    <a href="#products" class="cta-btn">View Products</a>
  </div>
</section>

<!-- PRODUCT SECTION -->
<section class="products-section" id="products">
  <h2 class="section-title">Our Main Products</h2>

  <div class="product-grid">

    <% products.forEach(product => { %>

      <div class="product-card">
          <img src="<%= product.img %>" alt="<%= product.name %>">

          <h3><%= product.name %></h3>

          <p class="price">₹ <%= product.price %></p>

          <p class="quantity"><%= product.quantity %></p>

          <a href="/products/<%= product._id %>" class="view-btn">View Details</a>
      </div>

    <% }) %>

  </div>
</section>


<%- include('partials/home_footer.ejs') %>
