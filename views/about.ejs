<style>
/* --- HERO --- */
.ops-hero {
    position: relative;
    height: 55vh;
    background: url('/images/banner-mustard.webp') center/cover no-repeat;
    display: flex;
    align-items: center;
    justify-content: center;
}
.ops-hero-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.45);
}
.ops-hero-content {
    position: relative;
    color: #fffde8;
    text-align: center;
    max-width: 700px;
}
.ops-hero-content h1 {
    font-size: 3rem;
    font-weight: 800;
    letter-spacing: 1px;
}
.ops-hero-content p {
    font-size: 1.2rem;
    opacity: 0.9;
    margin-top: 10px;
}

/* --- PROCESS GRID --- */
.operations-wrapper {
    padding: 60px 8%;
    background: #fffdf5;
}
.section-title {
    text-align: center;
    font-size: 2.2rem;
    font-weight: 700;
    color: #cc8a00;
    margin-bottom: 30px;
}

.operations-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px,1fr));
    gap: 25px;
}
.op-card {
    background: #ffffff;
    padding: 20px;
    border-radius: 14px;
    text-align: center;
    border: 1px solid rgba(255,199,44,0.4);
    transition: .3s;
    box-shadow: 0 4px 14px rgba(0,0,0,0.05);
}
.op-card img {
    width: 75px;
    height: 75px;
    object-fit: contain;
}
.op-card h3 {
    margin-top: 12px;
    font-size: 1.1rem;
    color: #444;
    font-weight: 600;
}
.op-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.10);
}

/* --- WHY CHOOSE US --- */
.choose-wrapper {
    padding: 60px 8%;
    background: #fff7e1;
}
.choose-grid {
