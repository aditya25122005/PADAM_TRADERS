}
.nutrition-grid {
    display: flex;
    gap: 30px;
    flex-wrap: wrap;
}
.nutri-card {
    flex: 1;
    min-width: 260px;
    background: #fff;
    padding: 20px;
    border-radius: 14px;
    border: 1px solid #ffe09c;
}
.nutri-card ul {
    list-style: none;
    padding: 0;
}
.nutri-card li {
    padding: 6px 0;
    font-size: 0.95rem;
    border-bottom: 1px solid #f7f1d2;
