<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm rounded-3">
                <div class="card-header text-center py-3" style="background-color: #f7d14d;">
                    <h4 class="mb-0" style="color: #4b3832;">Edit Product Details</h4>
                </div>
                <div class="card-body p-4">
                    <form action="/products/<%=foundProduct._id%>?_method=PATCH" method="post">
                        <div class="mb-3">
                            <label for="name" class="form-label" style="color: #4b3832;">Product Name</label>
                            <input type="text" class="form-control" name="name" id="name" placeholder="Name of the product" value="<%=foundProduct.name%>" required>
                        </div>

                        <div class="mb-3">
                            <label for="image" class="form-label" style="color: #4b3832;">Image URL</label>
                            <input type="text" class="form-control" name="img" id="image" placeholder="Image of the product" value="<%=foundProduct.img%>" required>
                        </div>

                        <div class="mb-3">
                            <label for="paisa" class="form-label" style="color: #4b3832;">Price (â‚¹)</label>
                            <input type="number" class="form-control" name="price" id="paisa" placeholder="Price of the product" value="<%=foundProduct.price%>" required>
                        </div>

                        <div class="mb-3">
                            <label for="quantity" class="form-label" style="color: #4b3832;">Quantity</label>
                            <input type="text" class="form-control" name="quantity" id="quantity" placeholder="Quantity of the product" value="<%=foundProduct.quantity%>" required>
                        </div>

                        <div class="mb-3">
                            <label for="desc" class="form-label" style="color: #4b3832;">Description</label>
                            <textarea class="form-control" name="desc" id="desc" rows="3" placeholder="Description of the product" required><%=foundProduct.desc%></textarea>
                        </div>

                        <div class="mb-3">
                            <label for="stock" class="form-label" style="color: #4b3832;">Stock</label>
                            <input type="number" class="form-control" name="stock" id="stock" placeholder="Stock of the product" value="<%=foundProduct.stock%>" required>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button class="btn" type="submit" style="background-color: #FFC107; color: #4b3832;">
                                Edit Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<%- include('../partials/footer')%>